<header id="top-header">

  <% if (noticeMessage && noticeMessage.length > 0) { %>
    <div class="flash-message notice"><%= noticeMessage %></div>
  <% } %>

  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (locals.accountData) { %>
      <span>Welcome, <a title="Go to Account Management" href="/account/"><%= locals.accountData.account_firstname %>.</a>   </span> <!-- Add the welcome message -->
      <!-- <a title="Go to Account Management" href="/account/">Account Management</a> --> <!-- Visible when logged in -->
      <a title="Click to log out" href="/account/logout">Logout</a> <!-- Logout link when logged in -->
    <% } else { %>
      <a title="Click to log in" href="/account/login">My Account</a> <!-- Login link when not logged in -->
    <% } %>
  </div>
</header>