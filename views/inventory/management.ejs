<div class="container">
    <h1><%= title %></h1>

    <%- messages() %>

    <% if (messages.error) { %>
        <div class="flash-message error"><%= messages.error %></div>
    <% } %>

    <% if (messages.success) { %>
        <div class="flash-message success"><%= messages.success %></div>
    <% } %>

    <% if (messages.notice) { %>
        <div class="flash-message success"><%= messages.notice %></div>
    <% } %>

    <% if (errors && errors.length > 0) { %> <!-- Check if errors is defined and has elements -->
        <ul class="notice">
            <% errors.forEach(error => { %> <!-- Loop through errors directly -->
                <li><%= error %></li>
            <% }) %>
        </ul>
    <% } %>

    <nav id="invNav">
        <p>Use the links below to manage classifications and inventory items:</p>
        <ul>
            <li><a href="/inv/add-classification">Add New Classification</a></li>
            <li><a href="/inv/add-inventory">Add New Inventory Item</a></li>
        </ul>
    </nav>

    <h2>Manage Inventory</h2>
    <p>Choose a classification to see the inventory items:</p>

    <!-- EJS code to display the classification select list -->
    <%- classificationSelect %>

    <!-- Empty table to display inventory items -->
    <table id="inventoryDisplay"></table>

    <!-- NoScript message -->
    <noscript>JavaScript must be enabled to use this page.</noscript>

    <!-- Link to the JavaScript file that will manage inventory updates -->
    <script src="/js/inventory.js"></script>

</div>
