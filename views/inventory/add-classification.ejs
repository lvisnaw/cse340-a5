<div class="container">
    <h1>Add New Classification</h1>

    <% if (messages.success && messages.success.length > 0) { %>
        <div class="flash-message success">
            <%= messages.success.join(", ") %>
        </div>
    <% } %>

    <% if (messages.error) { %>
        <div class="flash-message error"><%= messages.error %></div>
    <% } %>

    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>

    <form id="classificationForm" action="/inv/add-classification" method="POST">
        <label for="classification_name">Classification Name:</label>
        <input type="text" name="classification_name" id="classification_name" required
               pattern="^[^\\s!@#$%^&*()_+={}|:;,.<>?`~]+$"
               title="Classification name cannot contain spaces or special characters.">
        <button type="submit">Add Classification</button>
    </form>
</div>

<script src="/js/script.js"></script>