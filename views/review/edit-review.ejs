<div class="edit-review-container">
  <h1>Edit Review</h1>

  <%- messages() %>

  <% if (successMessage.length > 0) { %>
    <div class="alert alert-success">
      <%= successMessage %>
    </div>
  <% } %>
    
  <% if (errorMessage.length > 0) { %>
    <div class="flash-message error"><%= errorMessage %></div>
  <% } %>

  <!-- Update Review Form -->
  <form action="/inv/review/edit/<%= review.review_id %>" method="POST">
    <textarea name="review_text" rows="4" required><%= review.review_text %></textarea>
    <button type="submit">Update Review</button>
    <a href="/account" class="btn-cancel">Cancel</a>
  </form>

  <!-- Delete Review Form -->
  <% if (loggedin && accountData && accountData.account_id === review.account_id) { %>
    <form action="/inv/review/delete/<%= review.review_id %>" method="POST" style="margin-top: 10px;">
      <button type="submit" onclick="return confirm('Are you sure you want to delete this review?')" class="btn-delete">Delete Review</button>
    </form>
  <% } %>
</div>
